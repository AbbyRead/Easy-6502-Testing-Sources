num7:
	ldx placement
	
	; clean area
	lda bg
	sta $0220, x
	sta $0221, x
	sta $0240, x
	sta $0242, x
	sta $0260, x
	sta $0262, x
	sta $0280, x
	sta $0282, x
	
	; print digit
	lda fg
	sta $0200, x
	sta $0201, x
	sta $0202, x
	sta $0222, x
	sta $0241, x
	sta $0261, x
	sta $0281, x
	rts	

num8:
	ldx placement
	
	; clean area
	lda bg
	sta $0202, x
	sta $0221, x
	sta $0261, x
	
	; print digit
