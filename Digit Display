	; print digit
	lda fg
	sta $0200, x
	sta $0201, x
	sta $0202, x
	sta $0220, x
	sta $0222, x
	sta $0240, x
	sta $0241, x
	sta $0242, x
	sta $0262, x
	sta $0280, x
	sta $0281, x
	rts

scoreboard:
	jsr return
	jsr addBorder
	jsr movR
	jsr addBorder
	jsr movR
	jsr addBorder
	jsr movR
	jsr addBorder
	jsr movR
	jsr addBorder
	jsr movR
	jsr addBorder
	jsr movR
	jsr addBorder
	jsr movR
	jsr addBorder
	rts

clearDigits:
	jsr return
	jsr num_
	jsr movR
	jsr num_
	jsr movR
	jsr num_
	jsr movR
	jsr num_
	jsr movR
	jsr num_
	jsr movR
	jsr num_
	jsr movR
	jsr num_
	jsr movR
	jsr num_
	jsr movR
	rts

clearScreen:
	lda #$02
	sta $11
	lda screen
	ldy #$00
	ldx #$04
cloop:
	sta ($10), y
	iny
	bne cloop
	inc $11
	dex
	bne cloop
	rts	

exit:
